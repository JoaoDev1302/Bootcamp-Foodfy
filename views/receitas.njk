{% extends "layout.njk" %}

{%block head%}
    <head>
        <link rel="stylesheet" href="/receitas.css">
    </head>    
{% endblock %}

{% block content %}
    <section class="receitas">
        {% for item in items %}
            <div class="receita" id="{{loop.index0}}">

                <div class="imgReceita" id="burger">
                    <img src="{{item.image}}" alt="Burger">
                </div>
    
                <div>
                    <p class="receitaDesc">{{item.title}}</p>
                    <p class="chef">{{item.author}}</p>
                </div>

            </div>
        {% endfor %}    
    </section>
    
    <div class="informacoesReceitas">
        <div class="info">

            <div class="infoReceita">
                <img src="">
                <p class="descReceita"></p>
                <p class="descChef"></p>
                <p class="fechar">Fechar</p>

            </div>
        </div>

    </div>
    

{% endblock %}

{% block script%}
    <script src="/receitas.js"></script>
{% endblock %}
    
